{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["./**/*.ts", "types/**/*"],
  "exclude": ["node_modules"]
}